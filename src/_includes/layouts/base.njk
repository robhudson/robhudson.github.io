<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body class="flex flex-row">
    <!-- sidebar -->
    <div class="w-2/5 min-h-screen bg-green-900 {{ bgColor }} text-gray-300">
      <header class="sticky top-0">
        <div class="w-3/5 max-w-screen-sm ml-auto mr-12 text-left">
          <ul class="font-bold text-sm">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="inline">
                <a class="inline-block pt-16 pb-1 hover:bg-gray-500 hover:text-gray-800 {% if entry.url == page.url %} bg-white text-gray-800 px-3 {% else %} px-2 {% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
              </li>
            {%- endfor %}
          </ul>
          <div class="max-w-full mt-16 pb-4">
            {% block sidebar %}
              <h1>
                <a href="{{ '/' | url }}">{{ metadata.title | widont | safe }}</a>
              </h1>
              <span class="text-sm">by {{ metadata.author.name }}</span>
            {% endblock %}
          </div>
        </div>
      </header>
    </div>

    <!-- main -->
    <main class="w-3/5">
      <div class="ml-16 py-16 max-w-screen-sm mr-auto">
        {% block content %}
          {{ content | safe }}
        {% endblock %}
      </div>
    </main>

    <!-- footer -->
    <footer class="w-2/5 fixed bottom-0 left-0 text-gray-300">
      <div class="py-8">
        <div class="w-3/5 max-w-screen-sm ml-auto mr-12 text-left">
          {% block prefooter %}{% endblock %}
          <div class="flex flex-col">
            <div class="inline-flex p-3">
            {% for social in metadata.social %}
              <a class="flex-grow inline-flex items-center space-x-2" href="{{ social.href }}">
                {{ social.icon | safe }}
                <span>{{ social.name }}</span>
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>