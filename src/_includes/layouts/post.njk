---
bgColor: bg-teal-700
---
{% extends 'layouts/base.njk' %}
{% set section = 'blog' %}

{% block sidebar %}
  <p class="text-sm">
    <time datetime="{{ date | dateISO }}">{{ date | dateDisplay }}</time>
  </p>
  <h1>{{ title }}</h1>
{% endblock %}

{% block content %}

  <article class="prose">
    {{ content | safe }}
  </article>

{% endblock %}

{% block prefooter %}
  <ul class="mb-16 text-white font-bold">
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if previousPost %}
      <li>
        <span class="block text-white text-opacity-50">Previous Post:</span>
        <a class="text-lg" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
      </li>
    {% endif %}
    {%- if nextPost %}
      <li class="my-4">
        <span class="block text-white text-opacity-50">Subsequent Post:</span>
        <a class="text-lg" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
      </li>
    {% endif %}
  </ul>

{% endblock %}